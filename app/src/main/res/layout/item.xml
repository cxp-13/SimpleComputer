<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="operation"
            type="com.example.simplecomputer.entity.OperationEntity" />

        <variable
            name="operationDate"
            type="String" />
    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_id"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:text="@{String.valueOf(operation.id)}"
            tools:layout_editor_absoluteX="342dp" />

        <TextView
            android:id="@+id/textView_firstArg"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:text="@{String.valueOf(operation.firstArg)}"
            tools:layout_editor_absoluteX="274dp" />

        <TextView
            android:id="@+id/textView_type"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:text="@{String.valueOf(operation.type)}"
            tools:layout_editor_absoluteX="137dp" />

        <TextView
            android:id="@+id/textView_secondArg"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:text="@{String.valueOf(operation.secondArg)}"
            tools:layout_editor_absoluteX="206dp" />

        <TextView
            android:id="@+id/textView_result"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:text="@{String.valueOf(operation.result)}"
            tools:layout_editor_absoluteX="69dp" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:text="@{operationDate}"
            tools:layout_editor_absoluteX="1dp" />
    </LinearLayout>
</layout>