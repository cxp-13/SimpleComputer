<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!--        <import type="android.databinding.ObservableField"/>-->
        <variable
            name="record"
            type="com.example.simplecomputer.databinding.Record" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.ComputerFragment">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_computer"
            app:layout_constraintBottom_toTopOf="@+id/btn_go_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_go_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史记录"
            app:layout_constraintBottom_toTopOf="@+id/display"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:text="print"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/number0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number1" />

        <Button
            android:id="@+id/number0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/button14"
            app:layout_constraintEnd_toStartOf="@+id/point"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button14"
            app:layout_constraintTop_toTopOf="@+id/button14" />

        <Button
            android:id="@+id/number9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            app:layout_constraintBottom_toBottomOf="@+id/number8"
            app:layout_constraintEnd_toEndOf="@+id/number6"
            app:layout_constraintStart_toStartOf="@+id/number6"
            app:layout_constraintTop_toTopOf="@+id/number8" />

        <Button
            android:id="@+id/number8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            app:layout_constraintBottom_toBottomOf="@+id/number7"
            app:layout_constraintEnd_toEndOf="@+id/number5"
            app:layout_constraintStart_toStartOf="@+id/number5"
            app:layout_constraintTop_toTopOf="@+id/number7" />

        <Button
            android:id="@+id/number7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="4dp"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@+id/number4"
            app:layout_constraintEnd_toStartOf="@+id/number8"
            app:layout_constraintStart_toStartOf="@+id/number4"
            app:layout_constraintTop_toBottomOf="@+id/display" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×"
            app:layout_constraintBottom_toBottomOf="@+id/number9"
            app:layout_constraintEnd_toEndOf="@+id/reduce"
            app:layout_constraintStart_toStartOf="@+id/reduce"
            app:layout_constraintTop_toTopOf="@+id/number9" />

        <Button
            android:id="@+id/number6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            app:layout_constraintBottom_toBottomOf="@+id/number5"
            app:layout_constraintEnd_toEndOf="@+id/number3"
            app:layout_constraintStart_toStartOf="@+id/number3"
            app:layout_constraintTop_toTopOf="@+id/number5" />

        <Button
            android:id="@+id/reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/number6"
            app:layout_constraintEnd_toEndOf="@+id/add"
            app:layout_constraintStart_toStartOf="@+id/add"
            app:layout_constraintTop_toTopOf="@+id/number6" />

        <Button
            android:id="@+id/number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="3dp"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@+id/number1"
            app:layout_constraintEnd_toStartOf="@+id/number5"
            app:layout_constraintStart_toStartOf="@+id/number1"
            app:layout_constraintTop_toBottomOf="@+id/number7" />

        <Button
            android:id="@+id/number5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            app:layout_constraintBottom_toBottomOf="@+id/number4"
            app:layout_constraintEnd_toEndOf="@+id/number2"
            app:layout_constraintStart_toStartOf="@+id/number2"
            app:layout_constraintTop_toTopOf="@+id/number4" />

        <Button
            android:id="@+id/number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            app:layout_constraintBottom_toBottomOf="@+id/number2"
            app:layout_constraintEnd_toEndOf="@+id/point"
            app:layout_constraintStart_toEndOf="@+id/number2"
            app:layout_constraintStart_toStartOf="@+id/point"
            app:layout_constraintTop_toTopOf="@+id/number2" />

        <Button
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="4dp"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@+id/button14"
            app:layout_constraintEnd_toStartOf="@+id/number2"
            app:layout_constraintStart_toStartOf="@+id/button14"
            app:layout_constraintTop_toBottomOf="@+id/number4" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="@+id/number3"
            app:layout_constraintEnd_toEndOf="@+id/equal_sign"
            app:layout_constraintStart_toEndOf="@+id/number3"
            app:layout_constraintStart_toStartOf="@+id/equal_sign"
            app:layout_constraintTop_toTopOf="@+id/number3" />

        <Button
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintBottom_toBottomOf="@+id/number1"
            app:layout_constraintEnd_toEndOf="@+id/number0"
            app:layout_constraintStart_toEndOf="@+id/number1"
            app:layout_constraintStart_toStartOf="@+id/number0"
            app:layout_constraintTop_toTopOf="@+id/number1" />

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            app:layout_constraintBottom_toBottomOf="@+id/number0"
            app:layout_constraintEnd_toStartOf="@+id/equal_sign"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number0"
            app:layout_constraintTop_toTopOf="@+id/number0" />

        <Button
            android:id="@+id/equal_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            app:layout_constraintBottom_toBottomOf="@+id/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/point"
            app:layout_constraintTop_toTopOf="@+id/point" />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="÷"
            app:layout_constraintBottom_toTopOf="@+id/multiply"
            app:layout_constraintEnd_toEndOf="@+id/multiply"
            app:layout_constraintStart_toStartOf="@+id/multiply"
            app:layout_constraintTop_toBottomOf="@+id/display" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintEnd_toEndOf="@+id/number8"
            app:layout_constraintStart_toStartOf="@+id/number8"
            app:layout_constraintTop_toTopOf="@+id/back" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:src="?attr/actionModeCloseDrawable"
            app:layout_constraintBottom_toBottomOf="@+id/divide"
            app:layout_constraintEnd_toEndOf="@+id/number9"
            app:layout_constraintStart_toStartOf="@+id/number9"
            app:layout_constraintTop_toTopOf="@+id/divide" />

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/cardview_shadow_start_color"
            android:text="@{record.str}"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_go_history" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>



